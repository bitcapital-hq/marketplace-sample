{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "declaration": false,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./api/**/*",
    "./config/**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}